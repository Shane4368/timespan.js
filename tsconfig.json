{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"target": "ES2015",
		"noImplicitAny": true,
		"preserveConstEnums": true,
		"sourceMap": false,
		"outDir": "./dist",
		"strict": true,
		"noEmitOnError": true,
		"declaration": true,
		"declarationDir": "./dist",
		"lib": [
			"ESNext"
		]
	},
	"include": [
		"src/**/*"
	]
}